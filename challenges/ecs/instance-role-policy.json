{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": ["ecs:Poll", "ecs:StartTelemetrySession", "ecs:StartTask"],
      "Resource": "*",
      "Condition": {
        "ArnEquals": {
          "ecs:cluster": "${cluster_arn}"
        }
      }
    },
    {
      "Effect": "Allow",
      "Action": [
        "ecs:DeregisterContainerInstance",
        "ecs:RegisterContainerInstance",
        "ecs:Submit*"
      ],
      "Resource": ["${cluster_arn}"]
    },
    {
      "Effect": "Allow",
      "Action": ["ecs:DiscoverPollEndpoint", "ecs:Poll"],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "ecr:BatchCheckLayerAvailability",
        "ecr:BatchGetImage",
        "ecr:GetDownloadUrlForLayer",
        "ecr:GetAuthorizationToken"
      ],
      "Resource": ["arn:aws:ecr:*:*:repository/${ecr_name}"]
    },
    {
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents",
        "logs:DescribeLogStreams"
      ],
      "Resource": ["arn:aws:logs:*:*:*"]
    }
  ]
}
